<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Home Page</title>
</head>
<body style="background-color: rgb(234, 234, 234);">
    <%- include('./partials/nav.ejs') %>
    
    <div class="container mt-4 text-center">
        <div class="profile-info">
            <img src="<%= locals.user.profileImageURL %>" class="img-fluid rounded-circle" style="width: 20rem;">
            <h1 class="mt-3"><%= locals.user.fullName %></h1>
            <p>User since: <%= locals.user.createdAt %></p>
        </div>
    </div>

    <div class="container mt-4 mb-4">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% blogs.forEach(blog => { %>
                <div class="col">
                    <div class="card h-100" style="box-shadow:
                    inset 0 -3em 3em rgba(93, 93, 93, 0.3),
                    0 0 0 2px white,
                    0.3em 0.3em 1em rgba(44, 43, 43, 0.6);">
                        <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="Blog Cover">
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    
    <%- include('./partials/scripts.ejs') %>
</body>
</html>
